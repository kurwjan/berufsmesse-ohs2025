---
import Card from "@components/Card.astro";

interface Props {
    heading: string;
    class?: string;
}
const { heading, class: className, ...rest } = Astro.props;
---

<Card class={className} {...rest}>
    <slot name="icon" />
    <div class="flex text-[14px] w-full justify-between items-center">
        <div class="flex flex-col text-start">
            <h3 class="font-medium">{heading}</h3>
            <slot name="content" />
        </div>
        <slot name="trailing" />
    </div>
</Card>
